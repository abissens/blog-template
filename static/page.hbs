{{#> layout}}
{{#*inline "title"}}
    {{page.metadata.title}}
{{/inline}}
{{#*inline "head"}}
    <script src="/page.js"></script>
{{/inline}}
{{#*inline "content"}}
<div class="page-wrapper">
    <div class="page-card">
        <div class="page-card-header">
            <a href="{{page.page_uri}}" class="title"><h4>{{page.metadata.title}}</h4></a>
            <div class="authors">
                <h3 class="publishing-date">{{ date_format page.metadata.publishing_date.timestamp }}</h3>
                {{#if page.metadata.authors}}
                        by
                        {{#each page.metadata.authors}}
                            <h3>{{this}}</h3>
                            {{#unless @last}},{{/unless}}
                        {{/each}}
                {{/if}}
            </div>
            <div class="tags">
                {{#each page.metadata.tags}}
                    <h3>{{this}}</h3>
                {{/each}}
            </div>
        </div>
    </div>
    <div class="page-content">
        {{page_content}}
    </div>
</div>
{{/inline}}
{{/layout}}